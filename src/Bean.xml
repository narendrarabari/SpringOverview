<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="user1" class="com.nr.entities.User">
	<property name="firstName" value="Narendra"/>
	<property name="lastName" value="Rabari"/>
	</bean>
	
	
	<bean id="addressObj" class="com.nr.entities.Address">
		<property name="address1" value="abc" />
		<property name="address2" value="xyz" />
	</bean>
	
	<bean id="addressObj2" class="com.nr.entities.Address">
		<property name="address1" value="abc" />
		<property name="address2" value="xyz" />
	</bean>

	<context:annotation-config/>
	<context:component-scan base-package="com.nr.entities"/>
	
	<!--  <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>-->
	
	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/> 
</beans>
