<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="user" class="com.nr.entities.User" name="User">
		<property name="firstName" value="Narendra" />
		<property name="lastName" value="Rabari" />
		<property name="addressObj" ref="address1" />
	</bean>
	<bean id="address1" class="com.nr.entities.Address">
		<property name="address1" value="abc" />
		<property name="address2" value="xyz" />
	</bean>
	<alias name="User" alias="User-alias" />
	<bean id="user1" class="com.nr.entities.User" parent="user">
		<property name="firstName" value="Abhishek" />
		<property name="lastName" value="Shah" />
		<property name="userposts">
			<list>
				<ref bean="userPost1" />
				<ref bean="userPost2" />
			</list>
		</property>
	</bean>

	<bean id="userPost1" class="com.nr.entities.UserPost">
		<property name="postId" value="1" />
		<property name="content" value="first user post" />
	</bean>

	<bean id="userPost2" class="com.nr.entities.UserPost">
		<property name="postId" value="2" />
		<property name="content" value="second user post" />
	</bean>
</beans>
